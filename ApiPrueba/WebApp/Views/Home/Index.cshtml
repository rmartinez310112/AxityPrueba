@using WebApp.Models

@model List<productos>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>NOMBRE</td>
            <td>SKU</td>
            <td>DESCRIPCION</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.Sku</td>
                <td>@item.description</td>
            </tr>
        }
    </tbody>
</table>
